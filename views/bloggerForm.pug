extends general

block content
	
	h3 Complete Your Profile
	
	form(method='POST' action='')

		div.form-group
			label(for='name') Name:
			input.form-control#name(type='text' placeholder='John Vincent' autocomplete='off' name='name')
		
		div.form-group
			label(for='username') Username: 
			input.form-control-plaintext#username(type='text' readonly value=username name='username')

		div.form-group
			label(for='bio') Bio:
			textarea.form-control#bio(name='bio' placeholder='Write a short bio about yourself' spellcheck=true rows="3")

		button.btn.btn-primary(type='submit') Done

	if errors
		div.errorField
			button.btn.btn-outline-danger.btn-sm(type='button' data-toggle='modal' data-target='#errorModal') View Errors
			div.modal.fade#errorModal(tabindex='-1' role='dialog' aria-hidden='true')
				div.modal-dialog.modal-dialog-centered(role='document')
					div.modal-content
						div.modal-header
							h5.modal-title Errors
						div
						div.modal-body
							ul.list-group.list-group-flush
								each error in errors
									li.list-group-item!=error.msg
						div.modal-footer
							button.btn.btn-primary(type='button' data-dismiss='modal') Dismiss


