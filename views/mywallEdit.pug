extends general

block content
	
	h3 Edit Your Wall

	form(method='POST' action='')
		div.form-group
			label(for='name') Name: 
			input.form-control#name(name='name' value=blogger.name type='text' autocomplete='off')

		div.form-group
			label(for='username') Username:
			input.form-control-plaintext#username(name='username' value=blogger.username type='text' readonly)
			small.form-text.text-muted Username cannot be changed.

		div.form-group
			label(for='bio') Bio:
			textarea.form-control#bio(name='bio' spellcheck=true rows="3")=blogger.bio

		button.btn.btn-outline-primary Update Information

	if errors
		div.errorField
			button.btn.btn-outline-danger.btn-sm(type='button' data-toggle='modal' data-target='#errorModal') View Errors
			div.modal.fade#errorModal(tabindex='-1' role='dialog' aria-hidden='true')
				div.modal-dialog.modal-dialog-centered(role='document')
					div.modal-content
						div.modal-header
							h5.modal-title Errors
						div
						div.modal-body
							ul.list-group.list-group-flush
								each error in errors
									li.list-group-item!=error.msg
						div.modal-footer
							button.btn.btn-primary(type='button' data-dismiss='modal') Dismiss


