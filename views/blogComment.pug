extends general

block content
	
	h1=blog.title
	
	div.row
		div.col
			p.font-weight-bold.margin-none=blog.author.name
			p.text-primary=blog.author.username
		div.col.text-right
			p.text-secondary.margin-none=blog.formattedPostTime
			p.text-secondary=blog.relativePostTime + ' ago'

	p.text-break=blog.body

	h5 Write a Comment
	
	form(method='POST' action='')
		div.form-group
			label(for='comment') Comment
			textarea.form-control#comment(name='comment' spellcheck=true rows='3')
		
		button.btn.btn-primary.btn-sm(type='submit') Comment

	if errors
			div.errorField
				button.btn.btn-outline-danger.btn-sm(type='button' data-toggle='modal' data-target='#errorModal') View Errors
				div.modal.fade#errorModal(tabindex='-1' role='dialog' aria-hidden='true')
					div.modal-dialog.modal-dialog-centered(role='document')
						div.modal-content
							div.modal-header
								h5.modal-title Errors
							div
							div.modal-body
								ul.list-group.list-group-flush
									each error in errors
										li.list-group-item!=error.msg
							div.modal-footer
								button.btn.btn-primary(type='button' data-dismiss='modal') Dismiss


